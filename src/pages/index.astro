---
// Static page - prerender at build time
export const prerender = true;

// Import the necessary components
import MainLayout from "@/layouts/MainLayout.astro";
import HeroSection from "@components/sections/landing/HeroSection.astro";
import FeaturesGeneral from "@components/sections/features/FeaturesGeneral.astro";
import FeaturesNavs from "@components/sections/features/FeaturesNavs.astro";
import TestimonialsSection from "@components/sections/testimonials/TestimonialsSection.astro";
import FAQ from "@components/sections/misc/FAQ.astro";
import heroImage from "@images/hero-image.avif";
import faqs from "@data/faqs.json";
import features from "@data/features.json";
import featureImage from "@images/features-image.avif";
import construction from "@images/construction-image.avif";
import tools from "@images/automated-tools.avif";
import dashboard from "@images/dashboard-image.avif";

const avatarSrcs: Array<string> = [
  "https://images.unsplash.com/photo-1568602471122-7832951cc4c5?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=facearea&facepad=2&w=300&h=300&q=80",
  "https://images.unsplash.com/photo-1531927557220-a9e23c1e4794?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=facearea&facepad=2&w=300&h=300&q=80",
  "https://images.unsplash.com/photo-1541101767792-f9b2b1c4f127?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&&auto=format&fit=facearea&facepad=3&w=300&h=300&q=80",
  "https://images.unsplash.com/photo-1492562080023-ab3db95bfbce?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=facearea&facepad=2&w=300&h=300&q=80",
];
---

<MainLayout>
  <HeroSection
    title=`Best Peshawari <span
        class="text-yellow-500 dark:text-yellow-400">Chappal</span>`
    subTitle="Premium leather Peshawari Chappals crafted for all-day comfort & classic appeal."
    primaryBtn="Shop Now"
    primaryBtnURL="/products"
    secondaryBtn="Contact Us"
    secondaryBtnURL="/contact"
    withReview={true}
    avatars={avatarSrcs}
    rating=`<span class="font-bold">4.8</span> / 5`
    starCount={4}
    reviews=`From Over <span class="font-bold">12.8k</span> Reviews`
    src={heroImage}
    alt="Stack of Peshawari Chappal product boxes containing assorted hardware tools"
  />

  <FeaturesGeneral
    title="Authentic Peshawari Craftsmanship"
    subTitle="At Peshawari Chappal, we bring you the finest handcrafted leather sandals from Peshawar. Our master craftsmen use traditional techniques passed down through generations to create comfortable, durable, and stylish footwear that celebrates Pashtun heritage."
    src={featureImage}
    alt="Peshawari Chappal collection display"
    features={features}
  />

  <FeaturesNavs
    title=`Discover <span class="text-yellow-500 dark:text-yellow-400">Peshawari Chappal</span> — Traditional Elegance Meets Modern Style`
    tabs={[
      {
        heading: "Premium Leather Selection",
        content:
          "Choose from our range of premium leather options including buffalo hide, camel leather, and genuine cowhide. Each material is carefully sourced and treated to ensure maximum comfort and durability for your Peshawari Chappals.",
        svg: "tools",
        src: tools,
        alt: "Premium leather materials for Peshawari Chappals",
        first: true,
      },
      {
        heading: "Traditional Craftsmanship",
        content:
          "Our skilled artisans handcraft each pair of chappals using time-honored techniques from Peshawar. From cutting and stitching to sole attachment, every step is performed with precision and care to deliver authentic Peshawari footwear.",
        svg: "dashboard",
        src: dashboard,
        alt: "Artisan crafting a Peshawari Chappal",
        second: true,
      },
      {
        heading: "Variety of Styles",
        content:
          "Explore our diverse collection featuring classic Charsadda style, modern Zalmi designs, and elegant Imran Khan style chappals. Whether for daily wear or special occasions, find the perfect pair that matches your personality.",
        svg: "house",
        src: construction,
        alt: "Collection of different Peshawari Chappal styles",
      },
    ]}
  />

  <TestimonialsSection
    title="Loved by Chappal Enthusiasts"
    subTitle="Join thousands of satisfied customers who have discovered the comfort and style of authentic Peshawari Chappals."
    ;
    testimonials={[
      {
        content:
          "These Peshawari Chappals are absolutely amazing! The leather quality is exceptional and they're so comfortable. I've received countless compliments wearing them with both traditional and Western outfits.",
        author: "Ahmed Khan",
        role: "Fashion Enthusiast | Islamabad",
        avatarSrc:
          "https://images.unsplash.com/photo-1593104547489-5cfb3839a3b5?q=80&w=1453&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D8&auto=format&fit=facearea&facepad=2&w=320&h=320&q=80",
      },
    ]}
    statistics={[
      {
        count: "50k+",
        description:
          "happy customers wearing our handcrafted Peshawari Chappals",
      },
      {
        count: "4.9★",
        description:
          "average rating from our satisfied chappal lovers",
      },
      {
        count: "100%",
        description:
          "genuine leather and traditional craftsmanship guaranteed",
      },
      {
        count: "15+",
        description: "years of expertise in handcrafting authentic Peshawari footwear",
      },
    ]}
  />

  <FAQ title="Frequently<br />asked questions" faqs={faqs} />
</MainLayout>
