---
import MainLayout from "@/layouts/MainLayout.astro";
import { SITE } from "@data/constants";
import { getCollection } from "astro:content";

const pageTitle = `Sitemap | ${SITE.title}`;

// Get all products
const products = await getCollection("products", ({ id }) => id.startsWith("en/"));

// Get all blog posts
const blogPosts = await getCollection("blog", ({ id }) => id.startsWith("en/"));

const mainPages = [
  { name: "Home", url: "/", description: "Welcome to Peshawari Chappal - Authentic handcrafted leather sandals" },
  { name: "Products", url: "/products", description: "Browse our collection of handcrafted Peshawari Chappals" },
  { name: "Blog", url: "/blog", description: "Styling tips, care guides, and heritage stories" },
  { name: "Contact", url: "/contact", description: "Get in touch with us for orders and inquiries" },
];
---

<MainLayout title={pageTitle}>
  <section class="mx-auto max-w-[85rem] px-4 py-16 sm:px-6 lg:px-8">
    <!-- Page Header -->
    <div class="text-center mb-12">
      <h1 class="text-4xl font-bold text-neutral-800 dark:text-neutral-200 mb-4">
        Sitemap
      </h1>
      <p class="text-lg text-neutral-600 dark:text-neutral-400 max-w-2xl mx-auto">
        Find your way around our website. Explore all pages, products, and blog posts.
      </p>
    </div>

    <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-3">
      <!-- Main Pages -->
      <div class="bg-white dark:bg-neutral-800 rounded-2xl p-6 shadow-lg">
        <div class="flex items-center gap-3 mb-6">
          <div class="w-10 h-10 rounded-full bg-yellow-100 dark:bg-yellow-900/30 flex items-center justify-center">
            <svg class="w-5 h-5 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
            </svg>
          </div>
          <h2 class="text-xl font-bold text-neutral-800 dark:text-neutral-200">Main Pages</h2>
        </div>
        <ul class="space-y-3">
          {mainPages.map((page) => (
            <li>
              <a 
                href={page.url} 
                class="block p-3 rounded-lg hover:bg-neutral-50 dark:hover:bg-neutral-700/50 transition-colors group"
              >
                <span class="font-medium text-neutral-800 dark:text-neutral-200 group-hover:text-yellow-600 dark:group-hover:text-yellow-500 transition-colors">
                  {page.name}
                </span>
                <p class="text-sm text-neutral-500 dark:text-neutral-400 mt-1">
                  {page.description}
                </p>
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Products -->
      <div class="bg-white dark:bg-neutral-800 rounded-2xl p-6 shadow-lg">
        <div class="flex items-center gap-3 mb-6">
          <div class="w-10 h-10 rounded-full bg-yellow-100 dark:bg-yellow-900/30 flex items-center justify-center">
            <svg class="w-5 h-5 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z"></path>
            </svg>
          </div>
          <h2 class="text-xl font-bold text-neutral-800 dark:text-neutral-200">Products</h2>
        </div>
        <ul class="space-y-2">
          {products.map((product) => (
            <li>
              <a 
                href={`/products/${product.id.replace(/^en\//, "")}`}
                class="flex items-center gap-2 p-2 rounded-lg hover:bg-neutral-50 dark:hover:bg-neutral-700/50 transition-colors group"
              >
                <svg class="w-4 h-4 text-yellow-500" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
                </svg>
                <span class="text-neutral-700 dark:text-neutral-300 group-hover:text-yellow-600 dark:group-hover:text-yellow-500 transition-colors">
                  {product.data.title}
                </span>
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Blog Posts -->
      <div class="bg-white dark:bg-neutral-800 rounded-2xl p-6 shadow-lg">
        <div class="flex items-center gap-3 mb-6">
          <div class="w-10 h-10 rounded-full bg-yellow-100 dark:bg-yellow-900/30 flex items-center justify-center">
            <svg class="w-5 h-5 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z"></path>
            </svg>
          </div>
          <h2 class="text-xl font-bold text-neutral-800 dark:text-neutral-200">Blog Posts</h2>
        </div>
        <ul class="space-y-2">
          {blogPosts.map((post) => (
            <li>
              <a 
                href={`/blog/${post.id.replace(/^en\//, "")}`}
                class="flex items-center gap-2 p-2 rounded-lg hover:bg-neutral-50 dark:hover:bg-neutral-700/50 transition-colors group"
              >
                <svg class="w-4 h-4 text-yellow-500" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
                </svg>
                <span class="text-neutral-700 dark:text-neutral-300 group-hover:text-yellow-600 dark:group-hover:text-yellow-500 transition-colors">
                  {post.data.title}
                </span>
              </a>
            </li>
          ))}
        </ul>
      </div>
    </div>

    <!-- Additional Info -->
    <div class="mt-12 text-center">
      <p class="text-neutral-600 dark:text-neutral-400">
        Can't find what you're looking for? 
        <a href="/contact" class="text-yellow-600 hover:text-yellow-700 dark:text-yellow-500 dark:hover:text-yellow-400 font-medium">
          Contact us
        </a>
      </p>
    </div>
  </section>
</MainLayout>
