---
import MainLayout from "@/layouts/MainLayout.astro";
import { SITE } from "@data/constants";

const pageTitle = `Blog Management | ${SITE.title}`;
---

<MainLayout title={pageTitle}>
  <!-- Auth Guard -->
  <div id="auth-loading" class="flex min-h-[60vh] items-center justify-center">
    <div class="text-center">
      <div class="inline-block h-8 w-8 animate-spin rounded-full border-4 border-orange-500 border-t-transparent"></div>
      <p class="mt-4 text-neutral-600 dark:text-neutral-400">Checking authentication...</p>
    </div>
  </div>

  <!-- Main Content -->
  <div id="admin-content" class="hidden">
    <section class="mx-auto max-w-[85rem] px-4 py-10 sm:px-6 lg:px-8 lg:py-14">
      <!-- Header -->
      <div class="mb-8">
        <div class="flex flex-col gap-4 sm:flex-row sm:items-center sm:justify-between">
          <div>
            <h1 class="text-2xl font-bold text-gray-800 dark:text-white sm:text-3xl">Blog Management</h1>
            <p class="mt-1 text-sm text-gray-500 dark:text-neutral-400">Create and manage blog posts</p>
          </div>
          <div class="flex gap-3">
            <a href="/admin" class="inline-flex items-center gap-x-2 rounded-lg border border-gray-200 bg-white px-4 py-2 text-sm font-medium text-gray-800 shadow-sm hover:bg-gray-50 dark:border-neutral-700 dark:bg-neutral-800 dark:text-white dark:hover:bg-neutral-700">
              <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M10.5 19.5L3 12m0 0l7.5-7.5M3 12h18" /></svg>
              Orders
            </a>
            <button id="add-blog-btn" class="inline-flex items-center gap-x-2 rounded-lg bg-orange-500 px-4 py-2 text-sm font-medium text-white shadow-sm hover:bg-orange-600">
              <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M12 4.5v15m7.5-7.5h-15" /></svg>
              Add Blog Post
            </button>
          </div>
        </div>
      </div>

      <!-- Stats -->
      <div class="mb-8 grid gap-4 sm:grid-cols-3">
        <div class="rounded-xl border border-gray-200 bg-white p-5 shadow-sm dark:border-neutral-700 dark:bg-neutral-800">
          <div class="flex items-center gap-x-4">
            <div class="flex h-12 w-12 flex-shrink-0 items-center justify-center rounded-full bg-orange-100 dark:bg-orange-900/30">
              <svg class="h-6 w-6 text-orange-600 dark:text-orange-400" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M19.5 14.25v-2.625a3.375 3.375 0 00-3.375-3.375h-1.5A1.125 1.125 0 0113.5 7.125v-1.5a3.375 3.375 0 00-3.375-3.375H8.25m0 12.75h7.5m-7.5 3H12M10.5 2.25H5.625c-.621 0-1.125.504-1.125 1.125v17.25c0 .621.504 1.125 1.125 1.125h12.75c.621 0 1.125-.504 1.125-1.125V11.25a9 9 0 00-9-9z" /></svg>
            </div>
            <div>
              <p class="text-sm text-gray-500 dark:text-neutral-400">Total Posts</p>
              <p id="stat-total" class="text-2xl font-bold text-gray-800 dark:text-white">0</p>
            </div>
          </div>
        </div>
        <div class="rounded-xl border border-gray-200 bg-white p-5 shadow-sm dark:border-neutral-700 dark:bg-neutral-800">
          <div class="flex items-center gap-x-4">
            <div class="flex h-12 w-12 flex-shrink-0 items-center justify-center rounded-full bg-green-100 dark:bg-green-900/30">
              <svg class="h-6 w-6 text-green-600 dark:text-green-400" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75M21 12a9 9 0 11-18 0 9 9 0 0118 0z" /></svg>
            </div>
            <div>
              <p class="text-sm text-gray-500 dark:text-neutral-400">Published</p>
              <p id="stat-published" class="text-2xl font-bold text-gray-800 dark:text-white">0</p>
            </div>
          </div>
        </div>
        <div class="rounded-xl border border-gray-200 bg-white p-5 shadow-sm dark:border-neutral-700 dark:bg-neutral-800">
          <div class="flex items-center gap-x-4">
            <div class="flex h-12 w-12 flex-shrink-0 items-center justify-center rounded-full bg-yellow-100 dark:bg-yellow-900/30">
              <svg class="h-6 w-6 text-yellow-600 dark:text-yellow-400" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M12 6v6h4.5m4.5 0a9 9 0 11-18 0 9 9 0 0118 0z" /></svg>
            </div>
            <div>
              <p class="text-sm text-gray-500 dark:text-neutral-400">Drafts</p>
              <p id="stat-drafts" class="text-2xl font-bold text-gray-800 dark:text-white">0</p>
            </div>
          </div>
        </div>
      </div>

      <!-- Blogs Grid -->
      <div id="blogs-grid" class="grid gap-6 sm:grid-cols-2 lg:grid-cols-3">
        <!-- Blogs injected here -->
      </div>
    </section>
  </div>

  <!-- Blog Modal -->
  <div id="blog-modal" class="hidden fixed inset-0 z-[80]">
    <div class="fixed inset-0 flex items-center justify-center p-4">
      <div class="relative w-full max-w-3xl bg-white border shadow-lg rounded-xl dark:bg-neutral-800 dark:border-neutral-700 flex flex-col" style="max-height: 90vh;">
        <div class="flex-shrink-0 flex justify-between items-center py-3 px-4 border-b dark:border-neutral-700">
          <h3 id="modal-title" class="font-bold text-gray-800 dark:text-white">Add Blog Post</h3>
          <button type="button" id="close-modal-x" class="flex justify-center items-center h-7 w-7 text-sm font-semibold rounded-full border border-transparent text-gray-800 hover:bg-gray-100 dark:text-white dark:hover:bg-neutral-700">
            <svg class="flex-shrink-0 h-4 w-4" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" /></svg>
          </button>
        </div>
        <form id="blog-form" class="flex-1 overflow-y-auto p-4 space-y-4">
          <input type="hidden" id="blog-id" name="id" />
          
          <div class="grid gap-4 sm:grid-cols-2">
            <div class="sm:col-span-2">
              <label for="title" class="block text-sm font-medium text-gray-700 dark:text-neutral-300 mb-1">Title *</label>
              <input type="text" id="title" name="title" required class="w-full rounded-lg border border-gray-200 py-2 px-3 text-sm focus:border-orange-500 focus:ring-orange-500 dark:bg-neutral-900 dark:border-neutral-700 dark:text-white" />
            </div>
          </div>

          <div class="grid gap-4 sm:grid-cols-2">
            <div>
              <label for="slug" class="block text-sm font-medium text-gray-700 dark:text-neutral-300 mb-1">Slug *</label>
              <input type="text" id="slug" name="slug" required class="w-full rounded-lg border border-gray-200 py-2 px-3 text-sm focus:border-orange-500 focus:ring-orange-500 dark:bg-neutral-900 dark:border-neutral-700 dark:text-white" />
            </div>
            <div>
              <label for="author" class="block text-sm font-medium text-gray-700 dark:text-neutral-300 mb-1">Author *</label>
              <input type="text" id="author" name="author" required class="w-full rounded-lg border border-gray-200 py-2 px-3 text-sm focus:border-orange-500 focus:ring-orange-500 dark:bg-neutral-900 dark:border-neutral-700 dark:text-white" />
            </div>
          </div>

          <div>
            <label for="excerpt" class="block text-sm font-medium text-gray-700 dark:text-neutral-300 mb-1">Excerpt / Short Description</label>
            <textarea id="excerpt" name="excerpt" rows="2" class="w-full rounded-lg border border-gray-200 py-2 px-3 text-sm focus:border-orange-500 focus:ring-orange-500 dark:bg-neutral-900 dark:border-neutral-700 dark:text-white" placeholder="Brief summary for cards and SEO..."></textarea>
          </div>

          <div>
            <label for="content" class="block text-sm font-medium text-gray-700 dark:text-neutral-300 mb-1">Content * (Supports HTML)</label>
            <textarea id="content" name="content" rows="10" required class="w-full rounded-lg border border-gray-200 py-2 px-3 text-sm focus:border-orange-500 focus:ring-orange-500 dark:bg-neutral-900 dark:border-neutral-700 dark:text-white font-mono" placeholder="<p>Your blog content here...</p>"></textarea>
          </div>

          <div class="grid gap-4 sm:grid-cols-2">
            <div>
              <label for="featured_image" class="block text-sm font-medium text-gray-700 dark:text-neutral-300 mb-1">Featured Image URL</label>
              <input type="text" id="featured_image" name="featured_image" placeholder="https://example.com/image.jpg" class="w-full rounded-lg border border-gray-200 py-2 px-3 text-sm focus:border-orange-500 focus:ring-orange-500 dark:bg-neutral-900 dark:border-neutral-700 dark:text-white" />
            </div>
            <div>
              <label for="author_image" class="block text-sm font-medium text-gray-700 dark:text-neutral-300 mb-1">Author Image URL</label>
              <input type="text" id="author_image" name="author_image" placeholder="https://example.com/avatar.jpg" class="w-full rounded-lg border border-gray-200 py-2 px-3 text-sm focus:border-orange-500 focus:ring-orange-500 dark:bg-neutral-900 dark:border-neutral-700 dark:text-white" />
            </div>
          </div>

          <div class="grid gap-4 sm:grid-cols-2">
            <div>
              <label for="category" class="block text-sm font-medium text-gray-700 dark:text-neutral-300 mb-1">Category</label>
              <input type="text" id="category" name="category" placeholder="Style Tips, Care Guide, etc." class="w-full rounded-lg border border-gray-200 py-2 px-3 text-sm focus:border-orange-500 focus:ring-orange-500 dark:bg-neutral-900 dark:border-neutral-700 dark:text-white" />
            </div>
            <div>
              <label for="tags" class="block text-sm font-medium text-gray-700 dark:text-neutral-300 mb-1">Tags (comma separated)</label>
              <input type="text" id="tags" name="tags" placeholder="peshawari, leather, fashion" class="w-full rounded-lg border border-gray-200 py-2 px-3 text-sm focus:border-orange-500 focus:ring-orange-500 dark:bg-neutral-900 dark:border-neutral-700 dark:text-white" />
            </div>
          </div>

          <div class="flex items-center gap-6">
            <label class="flex items-center gap-2">
              <input type="checkbox" id="published" name="published" class="rounded border-gray-300 text-orange-500 focus:ring-orange-500" />
              <span class="text-sm text-gray-700 dark:text-neutral-300">Published</span>
            </label>
            <label class="flex items-center gap-2">
              <input type="checkbox" id="featured" name="featured" class="rounded border-gray-300 text-orange-500 focus:ring-orange-500" />
              <span class="text-sm text-gray-700 dark:text-neutral-300">Featured</span>
            </label>
          </div>
        </form>
        <div class="flex-shrink-0 flex justify-end items-center gap-x-2 py-3 px-4 border-t dark:border-neutral-700">
          <button type="button" id="close-modal-btn" class="py-2 px-3 inline-flex items-center gap-x-2 text-sm font-medium rounded-lg border border-gray-200 bg-white text-gray-800 shadow-sm hover:bg-gray-50 dark:bg-neutral-800 dark:border-neutral-700 dark:text-white dark:hover:bg-neutral-700">
            Cancel
          </button>
          <button type="submit" form="blog-form" class="py-2 px-3 inline-flex items-center gap-x-2 text-sm font-medium rounded-lg bg-orange-500 text-white hover:bg-orange-600">
            Save Post
          </button>
        </div>
      </div>
    </div>
  </div>

  <!-- Modal Backdrop -->
  <div id="modal-backdrop" class="hidden fixed inset-0 bg-black/50 z-[79]"></div>
</MainLayout>

<script>
  let allBlogs: any[] = [];
  let editingBlogId: number | null = null;

  const blogsGrid = document.getElementById('blogs-grid');
  const modal = document.getElementById('blog-modal');
  const backdrop = document.getElementById('modal-backdrop');
  const modalTitle = document.getElementById('modal-title');
  const blogForm = document.getElementById('blog-form') as HTMLFormElement;

  document.addEventListener('DOMContentLoaded', () => {
    const savedUser = localStorage.getItem('user');
    if (!savedUser) {
      window.location.href = '/login';
      return;
    }

    const user = JSON.parse(savedUser);
    if (user.role !== 'admin') {
      window.location.href = '/';
      return;
    }

    document.getElementById('auth-loading')?.classList.add('hidden');
    document.getElementById('admin-content')?.classList.remove('hidden');

    loadBlogs();
    setupEventListeners();
  });

  function setupEventListeners() {
    document.getElementById('add-blog-btn')?.addEventListener('click', () => openModal());
    document.getElementById('close-modal-x')?.addEventListener('click', closeModal);
    document.getElementById('close-modal-btn')?.addEventListener('click', closeModal);
    backdrop?.addEventListener('click', closeModal);
    blogForm?.addEventListener('submit', handleSubmit);

    // Auto-generate slug from title
    document.getElementById('title')?.addEventListener('input', (e) => {
      const title = (e.target as HTMLInputElement).value;
      const slugInput = document.getElementById('slug') as HTMLInputElement;
      if (slugInput && !editingBlogId) {
        slugInput.value = title.toLowerCase().replace(/[^a-z0-9]+/g, '-').replace(/(^-|-$)/g, '');
      }
    });
  }

  async function loadBlogs() {
    if (!blogsGrid) return;

    blogsGrid.innerHTML = `
      <div class="col-span-full flex justify-center py-12">
        <div class="h-8 w-8 animate-spin rounded-full border-4 border-orange-200 border-t-orange-500"></div>
      </div>
    `;

    try {
      const response = await fetch('/api/admin/blogs');
      const data = await response.json();

      if (!response.ok) throw new Error(data.error);

      allBlogs = data.blogs || [];
      updateStats();
      renderBlogs();
    } catch (error) {
      console.error('Error loading blogs:', error);
      blogsGrid.innerHTML = `
        <div class="col-span-full text-center py-12">
          <p class="text-red-500">Failed to load blogs</p>
        </div>
      `;
    }
  }

  function updateStats() {
    const total = allBlogs.length;
    const published = allBlogs.filter(b => b.published).length;
    const drafts = total - published;

    const totalEl = document.getElementById('stat-total');
    const publishedEl = document.getElementById('stat-published');
    const draftsEl = document.getElementById('stat-drafts');

    if (totalEl) totalEl.textContent = total.toString();
    if (publishedEl) publishedEl.textContent = published.toString();
    if (draftsEl) draftsEl.textContent = drafts.toString();
  }

  function renderBlogs() {
    if (!blogsGrid) return;

    if (allBlogs.length === 0) {
      blogsGrid.innerHTML = `
        <div class="col-span-full text-center py-12">
          <svg class="mx-auto h-12 w-12 text-gray-300" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 14.25v-2.625a3.375 3.375 0 00-3.375-3.375h-1.5A1.125 1.125 0 0113.5 7.125v-1.5a3.375 3.375 0 00-3.375-3.375H8.25m0 12.75h7.5m-7.5 3H12M10.5 2.25H5.625c-.621 0-1.125.504-1.125 1.125v17.25c0 .621.504 1.125 1.125 1.125h12.75c.621 0 1.125-.504 1.125-1.125V11.25a9 9 0 00-9-9z" />
          </svg>
          <p class="mt-4 text-gray-500">No blog posts found</p>
          <button onclick="document.getElementById('add-blog-btn')?.click()" class="mt-4 text-orange-500 hover:text-orange-600">Create your first post</button>
        </div>
      `;
      return;
    }

    blogsGrid.innerHTML = allBlogs.map(blog => `
      <div class="rounded-xl border border-gray-200 bg-white shadow-sm dark:border-neutral-700 dark:bg-neutral-800 overflow-hidden">
        <div class="aspect-video bg-gray-100 dark:bg-neutral-700 relative">
          ${blog.featured_image 
            ? `<img src="${blog.featured_image}" alt="${blog.title}" class="w-full h-full object-cover" />`
            : `<div class="w-full h-full flex items-center justify-center text-gray-400"><svg class="h-12 w-12" fill="none" viewBox="0 0 24 24" stroke-width="1" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M2.25 15.75l5.159-5.159a2.25 2.25 0 013.182 0l5.159 5.159m-1.5-1.5l1.409-1.409a2.25 2.25 0 013.182 0l2.909 2.909m-18 3.75h16.5a1.5 1.5 0 001.5-1.5V6a1.5 1.5 0 00-1.5-1.5H3.75A1.5 1.5 0 002.25 6v12a1.5 1.5 0 001.5 1.5z" /></svg></div>`
          }
          <div class="absolute top-2 right-2 flex gap-1">
            ${blog.featured ? `<span class="bg-yellow-500 text-white text-xs px-2 py-0.5 rounded">Featured</span>` : ''}
            <span class="${blog.published ? 'bg-green-500' : 'bg-gray-500'} text-white text-xs px-2 py-0.5 rounded">
              ${blog.published ? 'Published' : 'Draft'}
            </span>
          </div>
        </div>
        <div class="p-4">
          <div class="flex items-center gap-2 mb-2">
            ${blog.category ? `<span class="text-xs bg-orange-100 text-orange-600 dark:bg-orange-900/30 dark:text-orange-400 px-2 py-0.5 rounded">${blog.category}</span>` : ''}
            <span class="text-xs text-gray-500">${new Date(blog.created_at).toLocaleDateString()}</span>
          </div>
          <h3 class="font-semibold text-gray-800 dark:text-white line-clamp-2 mb-2">${blog.title}</h3>
          <p class="text-sm text-gray-500 dark:text-neutral-400 line-clamp-2 mb-4">${blog.excerpt || ''}</p>
          <div class="flex items-center justify-between">
            <div class="flex items-center gap-2">
              ${blog.author_image 
                ? `<img src="${blog.author_image}" alt="${blog.author}" class="w-6 h-6 rounded-full object-cover" />`
                : `<div class="w-6 h-6 rounded-full bg-orange-100 dark:bg-orange-900/30 flex items-center justify-center text-orange-600 dark:text-orange-400 text-xs font-bold">${blog.author?.charAt(0) || 'A'}</div>`
              }
              <span class="text-xs text-gray-500">${blog.author}</span>
            </div>
            <div class="flex gap-1">
              <button onclick="editBlog(${blog.id})" class="p-1.5 rounded border border-gray-200 bg-white text-gray-600 hover:bg-gray-50 dark:bg-neutral-700 dark:border-neutral-600 dark:text-white dark:hover:bg-neutral-600">
                <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M16.862 4.487l1.687-1.688a1.875 1.875 0 112.652 2.652L10.582 16.07a4.5 4.5 0 01-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 011.13-1.897l8.932-8.931zm0 0L19.5 7.125M18 14v4.75A2.25 2.25 0 0115.75 21H5.25A2.25 2.25 0 013 18.75V8.25A2.25 2.25 0 015.25 6H10" /></svg>
              </button>
              <button onclick="deleteBlog(${blog.id})" class="p-1.5 rounded border border-red-200 bg-red-50 text-red-600 hover:bg-red-100 dark:bg-red-900/30 dark:border-red-700 dark:text-red-400">
                <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M14.74 9l-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 01-2.244 2.077H8.084a2.25 2.25 0 01-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 00-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 013.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 00-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 00-7.5 0" /></svg>
              </button>
            </div>
          </div>
        </div>
      </div>
    `).join('');
  }

  function openModal(blog?: any) {
    editingBlogId = blog?.id || null;
    if (modalTitle) modalTitle.textContent = blog ? 'Edit Blog Post' : 'Add Blog Post';

    if (blog) {
      (document.getElementById('blog-id') as HTMLInputElement).value = blog.id;
      (document.getElementById('title') as HTMLInputElement).value = blog.title || '';
      (document.getElementById('slug') as HTMLInputElement).value = blog.slug || '';
      (document.getElementById('author') as HTMLInputElement).value = blog.author || '';
      (document.getElementById('excerpt') as HTMLTextAreaElement).value = blog.excerpt || '';
      (document.getElementById('content') as HTMLTextAreaElement).value = blog.content || '';
      (document.getElementById('featured_image') as HTMLInputElement).value = blog.featured_image || '';
      (document.getElementById('author_image') as HTMLInputElement).value = blog.author_image || '';
      (document.getElementById('category') as HTMLInputElement).value = blog.category || '';
      (document.getElementById('tags') as HTMLInputElement).value = (blog.tags || []).join(', ');
      (document.getElementById('published') as HTMLInputElement).checked = blog.published || false;
      (document.getElementById('featured') as HTMLInputElement).checked = blog.featured || false;
    } else {
      blogForm?.reset();
      (document.getElementById('blog-id') as HTMLInputElement).value = '';
    }

    modal?.classList.remove('hidden');
    backdrop?.classList.remove('hidden');
    document.body.classList.add('modal-open');
    if ((window as any).lenis) {
      (window as any).lenis.stop();
    }
  }

  function closeModal() {
    modal?.classList.add('hidden');
    backdrop?.classList.add('hidden');
    document.body.classList.remove('modal-open');
    if ((window as any).lenis) {
      (window as any).lenis.start();
    }
    editingBlogId = null;
  }

  async function handleSubmit(e: Event) {
    e.preventDefault();

    const id = (document.getElementById('blog-id') as HTMLInputElement).value;
    const tagsInput = (document.getElementById('tags') as HTMLInputElement).value;

    const data: any = {
      title: (document.getElementById('title') as HTMLInputElement).value,
      slug: (document.getElementById('slug') as HTMLInputElement).value,
      author: (document.getElementById('author') as HTMLInputElement).value,
      excerpt: (document.getElementById('excerpt') as HTMLTextAreaElement).value || null,
      content: (document.getElementById('content') as HTMLTextAreaElement).value,
      featured_image: (document.getElementById('featured_image') as HTMLInputElement).value || null,
      author_image: (document.getElementById('author_image') as HTMLInputElement).value || null,
      category: (document.getElementById('category') as HTMLInputElement).value || null,
      tags: tagsInput ? tagsInput.split(',').map(s => s.trim()).filter(s => s) : [],
      published: (document.getElementById('published') as HTMLInputElement).checked,
      featured: (document.getElementById('featured') as HTMLInputElement).checked,
    };

    if (id) data.id = parseInt(id);

    try {
      const response = await fetch('/api/admin/blogs', {
        method: id ? 'PUT' : 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify(data),
      });

      const result = await response.json();
      if (!response.ok) throw new Error(result.error);

      closeModal();
      await loadBlogs();
      alert(id ? 'Blog post updated!' : 'Blog post created!');
    } catch (error) {
      console.error('Error saving blog:', error);
      alert('Failed to save blog post');
    }
  }

  // Global functions for button onclick handlers
  (window as any).editBlog = (id: number) => {
    const blog = allBlogs.find(b => b.id === id);
    if (blog) openModal(blog);
  };

  (window as any).deleteBlog = async (id: number) => {
    if (!confirm('Are you sure you want to delete this blog post?')) return;

    try {
      const response = await fetch('/api/admin/blogs', {
        method: 'DELETE',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ id }),
      });

      const result = await response.json();
      if (!response.ok) throw new Error(result.error);

      await loadBlogs();
      alert('Blog post deleted!');
    } catch (error) {
      console.error('Error deleting blog:', error);
      alert('Failed to delete blog post');
    }
  };
</script>
