---
export const prerender = false;

import MainLayout from "@/layouts/MainLayout.astro";
import { supabase } from "@lib/db";
import { SITE } from "@data/constants";

// Get slug from URL
const { id: slug } = Astro.params;

// Fetch the blog post by slug
const { data: post, error } = await supabase
  .from("blogs")
  .select("*")
  .eq("slug", slug)
  .eq("published", true)
  .single();

// Redirect if not found
if (error || !post) {
  return Astro.redirect("/blog");
}

// Fetch related posts (same category or random if no category)
const { data: relatedPosts } = await supabase
  .from("blogs")
  .select("*")
  .eq("published", true)
  .neq("id", post.id)
  .limit(4);

const pageTitle: string = `${post.title} | ${SITE.title}`;
const metaDescription = post.excerpt || `Read ${post.title} on Peshawari Chappal's blog`;
---

<MainLayout
  title={pageTitle}
  customDescription={metaDescription}
  structuredData={{
    "@context": "https://schema.org",
    "@type": "BlogPosting",
    headline: post.title,
    image: post.featured_image,
    datePublished: post.created_at,
    author: {
      "@type": "Person",
      name: post.author,
    },
    publisher: {
      "@type": "Organization",
      name: SITE.title,
    },
    mainEntityOfPage: {
      "@type": "WebPage",
      "@id": `https://peshawarichappal.store/blog/${post.slug}`,
    },
  }}
>
  <article class="mx-auto max-w-3xl px-4 pt-6 pb-12 sm:px-6 lg:px-8 lg:pt-10">
    <!-- Header -->
    <div class="max-w-2xl mb-8">
      <div class="flex items-center gap-x-5 mb-6">
        {post.author_image ? (
          <img src={post.author_image} alt={post.author} class="w-12 h-12 rounded-full object-cover" />
        ) : (
          <div class="w-12 h-12 rounded-full bg-orange-100 dark:bg-orange-900/30 flex items-center justify-center text-orange-600 dark:text-orange-400 font-bold text-lg">
            {post.author?.charAt(0) || 'A'}
          </div>
        )}
        <div>
          <span class="font-bold text-neutral-700 dark:text-neutral-300">
            {post.author}
          </span>
          <div class="flex items-center gap-2 text-sm text-neutral-500 dark:text-neutral-400">
            <span>{new Date(post.created_at).toLocaleDateString('en-US', { month: 'long', day: 'numeric', year: 'numeric' })}</span>
            {post.category && (
              <>
                <span>â€¢</span>
                <span class="text-orange-600 dark:text-orange-400">{post.category}</span>
              </>
            )}
          </div>
        </div>
      </div>
      
      <h1 class="text-2xl sm:text-3xl md:text-4xl font-bold text-neutral-800 dark:text-neutral-200 mb-4">
        {post.title}
      </h1>
      
      {post.excerpt && (
        <p class="text-lg text-neutral-600 dark:text-neutral-400">
          {post.excerpt}
        </p>
      )}
    </div>
    
    <!-- Featured Image -->
    {post.featured_image && (
      <div class="mb-8 rounded-xl overflow-hidden">
        <img 
          src={post.featured_image} 
          alt={post.title}
          class="w-full h-auto object-cover"
        />
      </div>
    )}
    
    <!-- Content -->
    <div class="prose prose-lg prose-neutral dark:prose-invert max-w-none mb-8">
      <Fragment set:html={post.content} />
    </div>
    
    <!-- Tags -->
    {post.tags && post.tags.length > 0 && (
      <div class="flex flex-wrap gap-2 mb-8 pt-6 border-t border-neutral-200 dark:border-neutral-700">
        {post.tags.map((tag: string) => (
          <span class="inline-flex items-center rounded-lg bg-neutral-100 dark:bg-neutral-700 px-3 py-1.5 text-sm text-neutral-700 dark:text-neutral-300">
            #{tag}
          </span>
        ))}
      </div>
    )}
  </article>

  <!-- Related Posts -->
  {relatedPosts && relatedPosts.length > 0 && (
    <section class="mx-auto max-w-[85rem] px-4 py-10 sm:px-6 lg:px-8 lg:py-14 border-t border-neutral-200 dark:border-neutral-700">
      <div class="mb-8">
        <h2 class="text-2xl font-bold text-neutral-800 dark:text-neutral-200">
          Related Articles
        </h2>
      </div>
      <div class="grid gap-6 sm:grid-cols-2 lg:grid-cols-4">
        {relatedPosts.map((related: any) => (
          <a href={`/blog/${related.slug}`} class="group flex flex-col bg-white border border-gray-200 shadow-sm rounded-xl overflow-hidden dark:bg-neutral-800 dark:border-neutral-700 hover:shadow-lg transition-shadow">
            <div class="aspect-video relative overflow-hidden bg-gray-100 dark:bg-neutral-700">
              {related.featured_image ? (
                <img 
                  src={related.featured_image} 
                  alt={related.title}
                  class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500"
                  loading="lazy"
                />
              ) : (
                <div class="w-full h-full flex items-center justify-center text-gray-400">
                  <svg class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke-width="1" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 15.75l5.159-5.159a2.25 2.25 0 013.182 0l5.159 5.159m-1.5-1.5l1.409-1.409a2.25 2.25 0 013.182 0l2.909 2.909m-18 3.75h16.5a1.5 1.5 0 001.5-1.5V6a1.5 1.5 0 00-1.5-1.5H3.75A1.5 1.5 0 002.25 6v12a1.5 1.5 0 001.5 1.5z" />
                  </svg>
                </div>
              )}
            </div>
            <div class="p-3">
              <h3 class="text-sm font-bold text-gray-800 dark:text-white group-hover:text-orange-600 dark:group-hover:text-orange-400 transition-colors line-clamp-2">
                {related.title}
              </h3>
              <span class="text-xs text-gray-500 dark:text-neutral-400 mt-1 block">
                {new Date(related.created_at).toLocaleDateString('en-US', { month: 'short', day: 'numeric' })}
              </span>
            </div>
          </a>
        ))}
      </div>
    </section>
  )}
</MainLayout>
