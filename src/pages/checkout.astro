---
import MainLayout from "@/layouts/MainLayout.astro";
import { SITE } from "@data/constants";

const pageTitle = `Checkout | ${SITE.title}`;
---

<MainLayout title={pageTitle}>
  <section class="mx-auto max-w-7xl px-4 py-10 sm:px-6 lg:px-8 lg:py-14">
    <div class="mb-8">
      <h1 class="text-3xl font-bold text-gray-800 dark:text-neutral-200">
        Checkout
      </h1>
      <p class="text-sm text-gray-600 dark:text-neutral-400 mt-1">
        Provide your contact and delivery details. No payment is captured yet.
      </p>
    </div>

    <div class="grid gap-8 lg:grid-cols-3">
      <!-- Left Column - Form (2/3 width) -->
      <div class="lg:col-span-2">
        <div class="bg-white border border-gray-200 rounded-xl shadow-sm dark:bg-neutral-900 dark:border-neutral-700">
          <div class="p-4 sm:p-7">
            <form id="checkout-form">
          <div class="grid gap-y-6">
            <!-- Contact Info -->
            <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
              <div>
                <label for="full-name" class="block text-sm font-medium mb-2 dark:text-white">Full name</label>
                <input type="text" id="full-name" name="full-name" class="py-3 px-4 block w-full border-gray-200 rounded-lg text-sm focus:border-orange-500 focus:ring-orange-500 disabled:opacity-50 disabled:pointer-events-none dark:bg-neutral-900 dark:border-neutral-700 dark:text-neutral-400 dark:placeholder-neutral-500 dark:focus:ring-neutral-600" placeholder="Amina Khan" required>
              </div>
              <div>
                <label for="phone" class="block text-sm font-medium mb-2 dark:text-white">Phone number</label>
                <input type="tel" id="phone" name="phone" class="py-3 px-4 block w-full border-gray-200 rounded-lg text-sm focus:border-orange-500 focus:ring-orange-500 disabled:opacity-50 disabled:pointer-events-none dark:bg-neutral-900 dark:border-neutral-700 dark:text-neutral-400 dark:placeholder-neutral-500 dark:focus:ring-neutral-600" placeholder="+92 300 1234567" required>
              </div>
            </div>

            <div>
              <label for="email" class="block text-sm font-medium mb-2 dark:text-white">Email address</label>
              <input type="email" id="email" name="email" class="py-3 px-4 block w-full border-gray-200 rounded-lg text-sm focus:border-orange-500 focus:ring-orange-500 disabled:opacity-50 disabled:pointer-events-none dark:bg-neutral-900 dark:border-neutral-700 dark:text-neutral-400 dark:placeholder-neutral-500 dark:focus:ring-neutral-600" placeholder="you@example.com" required>
            </div>

            <!-- Shipping Address -->
            <div>
              <h3 class="text-lg font-semibold text-gray-800 dark:text-neutral-200 mb-4">Shipping address</h3>
              <div class="grid gap-y-4">
                <div>
                  <label for="address" class="block text-sm font-medium mb-2 dark:text-white">Street address</label>
                  <input type="text" id="address" name="address" class="py-3 px-4 block w-full border-gray-200 rounded-lg text-sm focus:border-orange-500 focus:ring-orange-500 disabled:opacity-50 disabled:pointer-events-none dark:bg-neutral-900 dark:border-neutral-700 dark:text-neutral-400 dark:placeholder-neutral-500 dark:focus:ring-neutral-600" placeholder="House 12, Lane 3" required>
                </div>
                <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
                  <div>
                    <label for="city" class="block text-sm font-medium mb-2 dark:text-white">City</label>
                    <input type="text" id="city" name="city" class="py-3 px-4 block w-full border-gray-200 rounded-lg text-sm focus:border-orange-500 focus:ring-orange-500 disabled:opacity-50 disabled:pointer-events-none dark:bg-neutral-900 dark:border-neutral-700 dark:text-neutral-400 dark:placeholder-neutral-500 dark:focus:ring-neutral-600" placeholder="Peshawar" required>
                  </div>
                  <div>
                    <label for="postal-code" class="block text-sm font-medium mb-2 dark:text-white">Postal code</label>
                    <input type="text" id="postal-code" name="postal-code" class="py-3 px-4 block w-full border-gray-200 rounded-lg text-sm focus:border-orange-500 focus:ring-orange-500 disabled:opacity-50 disabled:pointer-events-none dark:bg-neutral-900 dark:border-neutral-700 dark:text-neutral-400 dark:placeholder-neutral-500 dark:focus:ring-neutral-600" placeholder="25000" required>
                  </div>
                </div>
                <div>
                  <label for="country" class="block text-sm font-medium mb-2 dark:text-white">Country</label>
                  <input type="text" id="country" name="country" class="py-3 px-4 block w-full border-gray-200 rounded-lg text-sm focus:border-orange-500 focus:ring-orange-500 disabled:opacity-50 disabled:pointer-events-none dark:bg-neutral-900 dark:border-neutral-700 dark:text-neutral-400 dark:placeholder-neutral-500 dark:focus:ring-neutral-600" value="Pakistan" readonly>
                </div>
              </div>
            </div>

            <!-- Delivery Options -->
            <div>
              <h3 class="text-lg font-semibold text-gray-800 dark:text-neutral-200 mb-4">Delivery options</h3>
              <div class="grid gap-4">
                <label class="relative flex items-center p-4 border border-gray-200 rounded-lg cursor-pointer hover:bg-gray-50 dark:border-neutral-700 dark:hover:bg-neutral-800">
                  <input type="radio" name="delivery" value="normal" class="peer sr-only" checked>
                  <span class="flex items-center justify-center w-5 h-5 border border-gray-300 rounded-full mr-4 peer-checked:border-orange-600 peer-checked:bg-orange-600 peer-checked:after:content-[''] peer-checked:after:block peer-checked:after:w-2 peer-checked:after:h-2 peer-checked:after:bg-white peer-checked:after:rounded-full"></span>
                  <div class="flex-1">
                    <span class="block font-medium text-gray-800 dark:text-neutral-200">Normal Delivery</span>
                    <span class="block text-sm text-gray-500 dark:text-neutral-400">Delivery within 5-7 business days</span>
                  </div>
                  <span class="font-medium text-gray-800 dark:text-neutral-200">Rs 250</span>
                </label>

                <label class="relative flex items-center p-4 border border-gray-200 rounded-lg cursor-pointer hover:bg-gray-50 dark:border-neutral-700 dark:hover:bg-neutral-800">
                  <input type="radio" name="delivery" value="express" class="peer sr-only">
                  <span class="flex items-center justify-center w-5 h-5 border border-gray-300 rounded-full mr-4 peer-checked:border-orange-600 peer-checked:bg-orange-600 peer-checked:after:content-[''] peer-checked:after:block peer-checked:after:w-2 peer-checked:after:h-2 peer-checked:after:bg-white peer-checked:after:rounded-full"></span>
                  <div class="flex-1">
                    <span class="block font-medium text-gray-800 dark:text-neutral-200">Express Delivery</span>
                    <span class="block text-sm text-gray-500 dark:text-neutral-400">Delivery within 2-3 business days</span>
                  </div>
                  <span class="font-medium text-gray-800 dark:text-neutral-200">Rs 400</span>
                </label>
              </div>
            </div>

            <!-- Payment Details -->
            <div>
              <h3 class="text-lg font-semibold text-gray-800 dark:text-neutral-200 mb-4">Payment details</h3>
              <div class="grid gap-4">
                <label class="relative flex items-center p-4 border border-gray-200 rounded-lg cursor-pointer hover:bg-gray-50 dark:border-neutral-700 dark:hover:bg-neutral-800">
                  <input type="radio" name="payment" value="cod" class="peer sr-only" checked>
                  <span class="flex items-center justify-center w-5 h-5 border border-gray-300 rounded-full mr-4 peer-checked:border-orange-600 peer-checked:bg-orange-600 peer-checked:after:content-[''] peer-checked:after:block peer-checked:after:w-2 peer-checked:after:h-2 peer-checked:after:bg-white peer-checked:after:rounded-full"></span>
                  <div class="flex-1">
                    <span class="block font-medium text-gray-800 dark:text-neutral-200">Cash on Delivery</span>
                    <span class="block text-sm text-gray-500 dark:text-neutral-400">Pay when your order arrives</span>
                  </div>
                </label>

                <label class="relative flex items-center p-4 border border-gray-200 rounded-lg cursor-pointer hover:bg-gray-50 dark:border-neutral-700 dark:hover:bg-neutral-800">
                  <input type="radio" name="payment" value="bank" class="peer sr-only">
                  <span class="flex items-center justify-center w-5 h-5 border border-gray-300 rounded-full mr-4 peer-checked:border-orange-600 peer-checked:bg-orange-600 peer-checked:after:content-[''] peer-checked:after:block peer-checked:after:w-2 peer-checked:after:h-2 peer-checked:after:bg-white peer-checked:after:rounded-full"></span>
                  <div class="flex-1">
                    <span class="block font-medium text-gray-800 dark:text-neutral-200">Bank Transfer</span>
                    <span class="block text-sm text-gray-500 dark:text-neutral-400">Direct bank transfer</span>
                  </div>
                </label>
              </div>
            </div>

            <!-- Order Notes -->
            <div>
              <label for="notes" class="block text-sm font-medium mb-2 dark:text-white">Order notes</label>
              <textarea id="notes" name="notes" rows="3" class="py-3 px-4 block w-full border-gray-200 rounded-lg text-sm focus:border-orange-500 focus:ring-orange-500 disabled:opacity-50 disabled:pointer-events-none dark:bg-neutral-900 dark:border-neutral-700 dark:text-neutral-400 dark:placeholder-neutral-500 dark:focus:ring-neutral-600" placeholder="Share colour preferences, gifting notes, or delivery instructions."></textarea>
            </div>

            <div class="pt-6">
              <button type="submit" class="w-full py-3 px-4 inline-flex justify-center items-center gap-x-2 text-sm font-semibold rounded-lg border border-transparent bg-gray-900 text-white hover:bg-gray-800 disabled:opacity-50 disabled:pointer-events-none dark:bg-white dark:text-neutral-800 dark:hover:bg-neutral-200">
                Place order
              </button>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>

  <!-- Right Column - Order Summary (1/3 width) -->
  <div class="lg:col-span-1">
    <!-- Order Summary Card -->
    <div class="bg-white border border-gray-200 rounded-xl shadow-sm dark:bg-neutral-900 dark:border-neutral-700 lg:sticky lg:top-24">
      <div class="p-4 sm:p-7">
        <h3 class="text-lg font-semibold text-gray-800 dark:text-neutral-200 mb-1">Order summary</h3>
        <p class="text-sm text-gray-500 dark:text-neutral-400 mb-6">Review your items before placing the order.</p>
        
        <div id="order-items" class="space-y-4 mb-6">
          <!-- Items injected here -->
        </div>

        <div class="border-t border-gray-200 pt-4 dark:border-neutral-700 space-y-2">
          <div class="flex justify-between text-gray-800 dark:text-neutral-200">
            <span>Subtotal</span>
            <span id="subtotal-display">Rs 0</span>
          </div>
          <div class="flex justify-between text-gray-800 dark:text-neutral-200">
            <span id="delivery-label">Delivery (Normal)</span>
            <span id="delivery-cost">Rs 250</span>
          </div>
          <div class="flex justify-between font-bold text-lg text-gray-800 dark:text-neutral-200 pt-2 border-t border-gray-200 dark:border-neutral-700 mt-2">
            <span>Total</span>
            <span id="total-display">Rs 0</span>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
  </section>
</MainLayout>

<script>
  import { $cart, clearCart, increaseQuantity, decreaseQuantity } from "@stores/cartStore";

  const orderItemsContainer = document.getElementById("order-items");
  const subtotalDisplay = document.getElementById("subtotal-display");
  const deliveryLabel = document.getElementById("delivery-label");
  const deliveryCostDisplay = document.getElementById("delivery-cost");
  const totalDisplay = document.getElementById("total-display");
  const checkoutForm = document.getElementById("checkout-form");
  const deliveryRadios = document.querySelectorAll('input[name="delivery"]');

  let currentCart = {};
  let subtotal = 0;
  let deliveryCost = 250; // Default normal delivery

  function updateTotals() {
    const total = subtotal + deliveryCost;
    if (subtotalDisplay) subtotalDisplay.textContent = `Rs ${subtotal}`;
    if (deliveryCostDisplay) deliveryCostDisplay.textContent = `Rs ${deliveryCost}`;
    if (totalDisplay) totalDisplay.textContent = `Rs ${total}`;
  }

  // Handle delivery option changes
  deliveryRadios.forEach(radio => {
    radio.addEventListener('change', (e) => {
      const target = e.target as HTMLInputElement;
      if (target.value === 'normal') {
        deliveryCost = 250;
        if (deliveryLabel) deliveryLabel.textContent = 'Delivery (Normal)';
      } else {
        deliveryCost = 400;
        if (deliveryLabel) deliveryLabel.textContent = 'Delivery (Express)';
      }
      updateTotals();
    });
  });

  $cart.subscribe((cart) => {
    currentCart = cart;
    if (!orderItemsContainer) return;

    const items = Object.values(cart);
    subtotal = 0;

    orderItemsContainer.innerHTML = items.map((item) => {
      subtotal += item.price * item.quantity;
      const imageUrl = String(item.image);
      return `
        <div class="flex justify-between items-start pb-4 border-b border-gray-200 dark:border-neutral-700 last:border-b-0">
          <div class="flex gap-4">
            <img src="${imageUrl}" alt="${item.title}" class="w-16 h-16 object-cover rounded-md">
            <div>
              <p class="text-sm font-medium text-gray-800 dark:text-neutral-200">${item.title}</p>
              <p class="text-sm text-gray-500 dark:text-neutral-400">Rs ${item.price} each</p>
              
              <!-- Quantity Controls -->
              <div class="flex items-center gap-2 mt-2">
                <button 
                  data-id="${item.id}" 
                  class="checkout-decrease-btn flex h-6 w-6 items-center justify-center rounded border border-gray-300 text-xs hover:bg-gray-50 dark:border-neutral-600 dark:hover:bg-neutral-700"
                >
                  -
                </button>
                <span class="text-sm font-medium text-gray-800 dark:text-white min-w-[2rem] text-center">${item.quantity}</span>
                <button 
                  data-id="${item.id}" 
                  class="checkout-increase-btn flex h-6 w-6 items-center justify-center rounded border border-gray-300 text-xs hover:bg-gray-50 dark:border-neutral-600 dark:hover:bg-neutral-700"
                >
                  +
                </button>
              </div>
            </div>
          </div>
          <span class="text-sm font-medium text-gray-800 dark:text-neutral-200">Rs ${item.price * item.quantity}</span>
        </div>
      `;
    }).join("");

    // Add event listeners for quantity controls
    document.querySelectorAll('.checkout-decrease-btn').forEach(btn => {
      btn.addEventListener('click', (e) => {
        const id = (e.target as HTMLElement).dataset.id;
        if (id) decreaseQuantity(id);
      });
    });

    document.querySelectorAll('.checkout-increase-btn').forEach(btn => {
      btn.addEventListener('click', (e) => {
        const id = (e.target as HTMLElement).dataset.id;
        if (id) increaseQuantity(id);
      });
    });

    updateTotals();
  });

  if (checkoutForm) {
    checkoutForm.addEventListener("submit", async (e) => {
      e.preventDefault();
      
      if (Object.keys(currentCart).length === 0) {
        alert("Your cart is empty!");
        return;
      }

      // Prepare order data for API
      const formData = new FormData(e.target as HTMLFormElement);
      const orderData = {
        customerName: formData.get("full-name") as string,
        customerEmail: formData.get("email") as string,
        customerPhone: formData.get("phone") as string,
        shippingAddress: formData.get("address") as string,
        shippingCity: formData.get("city") as string,
        shippingPostalCode: formData.get("postal-code") as string,
        shippingCountry: formData.get("country") as string,
        deliveryMethod: formData.get("delivery") as string,
        paymentMethod: formData.get("payment") as string,
        orderNotes: formData.get("notes") as string,
        items: Object.values(currentCart),
        subtotal: subtotal,
        deliveryCost: deliveryCost,
        total: subtotal + deliveryCost,
      };

      try {
        // Submit order to API
        const response = await fetch("/api/orders", {
          method: "POST",
          headers: {
            "Content-Type": "application/json",
          },
          body: JSON.stringify(orderData),
        });

        const result = await response.json();

        if (response.ok) {
          // Clear cart on success
          clearCart();
          window.location.href = `/thank-you?orderNumber=${result.orderNumber}`;
        } else {
          alert(`Order failed: ${result.error}`);
        }
      } catch (error) {
        console.error("Order submission error:", error);
        alert("Failed to place order. Please try again.");
      }
    });
  }
</script>
