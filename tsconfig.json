{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@components/*": [
        "src/components/*"
      ],
      "@content/*": [
        "src/content/*"
      ],
      "@data/*": [
        "src/data_files/*"
      ],
      "@images/*": [
        "src/images/*"
      ],
      "@scripts/*": [
        "src/assets/scripts/*"
      ],
      "@styles/*": [
        "src/assets/styles/*"
      ],
      "@utils/*": [
        "src/utils/*"
      ],
      "@stores/*": [
        "src/stores/*"
      ]
    }
  },
  "include": [
    ".astro/types.d.ts",
    "src/**/*",
    "*.config.mjs",
    "*.config.ts"
  ],
  "exclude": [
    "dist",
    "dist/**",
    ".vercel",
    ".vercel/**",
    "node_modules"
  ]
}